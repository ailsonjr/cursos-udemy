extends ./main

block content
  div.container.col-md-8
    form(action="#", method="post")
      div.form-group
        input.form-control(
          type="text",
          name="cliente",
          id="cliente",
          placeholder="Digite o nome do cliente"
          required
        )
      div.form-group
        input.form-control(
          type="text",
          name="cnpj",
          id="cnpj",
          placeholder="Digite o CNPJ do cliente"
          required
        )
      div.form-group
        input.form-control(
          type="text",
          name="telefone",
          id="telefone",
          placeholder="Digite um telefone"
          required
        )
      div.form-group
        input.form-control(
          type="email",
          name="email",
          id="email",
          placeholder="Digite um email"
          required
        )
      div.form-group
        input.form-control(
          type="text",
          name="contato",
          id="contato",
          placeholder="Digite um contato do cliente"
          required
        )
      div.form-group
        button.btn.btn-sucess.col-md-12(type="submit") Cadastrar